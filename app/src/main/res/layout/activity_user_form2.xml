<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00807A"
    tools:context=".User_Form">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/arrow_back"
        android:onClick="Back"/>

    <ImageView
        android:id="@+id/settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="70dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/settings"
        android:onClick="Setting"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_below="@id/settings"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/dashboard_bg">

    </ImageView>

    <TextView
        android:id="@+id/TVCopyOfGrades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Copy of Grades"
        android:textColor="#fff"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/TVStudentID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="90dp"
        android:text="Student ID:"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etStudentID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVStudentID"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/custom_input"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp" />

    <TextView
        android:id="@+id/TVStudentAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etStudentID"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:text="Address:"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etStudentAdd"
        android:background="@drawable/custom_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVStudentAdd"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp" />

    <TextView
        android:id="@+id/TVStudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etStudentAdd"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:text="Name:"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etStudentName"
        android:background="@drawable/custom_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVStudentName"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp" />

    <ImageView
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etStudentName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="BtnSubmit"
        android:background="@drawable/submit" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSubmit"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="-10dp"
        android:layout_marginBottom="-150dp"
        android:background="@drawable/post_wave">

    </ImageView>



</RelativeLayout>